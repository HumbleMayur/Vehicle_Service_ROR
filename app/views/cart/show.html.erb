<h1>Your Cart</h1>
<% @cart.orderables.each do |orderable| %>
  <% product = orderable.product %>
  <p><%= product.name %> * <%= orderable.quantity %> = $<%= product.price * orderable.quantity %></p>
<% end %>
<p>Your total is $<%= @cart.total %> </p>


<table class="table table-sm table-light; text-align:center">
 <thead>
    <tr class="table-primary">
      <th scope="col">Service Name</th>
      <th scope="col">Service Quantity </th>
      <th scope="col">Service Price</th>
    </tr>
  </thead>  

  <tbody>
   <% @cart.orderables.each do |orderable| %>
   <% product = orderable.product %>
    <tr class="table-danger">
   
      <th scope="row"><%= product.name %>
      </th>
      <td><%= orderable.quantity %></td>
      <td> Rs  <%= product.price * orderable.quantity %></td>
     
    </tr>
    <% end %> 

     
   
   
  </tbody>
</table>
